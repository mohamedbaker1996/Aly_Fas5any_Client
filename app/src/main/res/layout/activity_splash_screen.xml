<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    tools:context=".ui.Activity.SplashScreen">

    <ImageView
        android:id="@+id/img_ic_splash"
        android:layout_width="144dp"
        android:layout_height="144dp"

        android:layout_centerInParent="true"
        android:background="@drawable/sign_up_button"
        android:src="@drawable/ic_icon_fish" />
    <TextView
        android:id="@+id/txt_aly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_ic_splash"
        android:layout_centerInParent="true"
        android:text="علي الفسخاني"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/btnSignActive"
        android:textSize="34sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_aly"
        android:layout_centerInParent="true"
        android:text="منذ1937"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="28sp"/>



</RelativeLayout>